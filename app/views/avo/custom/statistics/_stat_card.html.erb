<%
  color_styles = {
    'blue' => { bg: '#eff6ff', text: '#2563eb' },
    'purple' => { bg: '#faf5ff', text: '#9333ea' },
    'green' => { bg: '#f0fdf4', text: '#16a34a' },
    'yellow' => { bg: '#fefce8', text: '#ca8a04' },
    'indigo' => { bg: '#eef2ff', text: '#4f46e5' },
    'pink' => { bg: '#fdf2f8', text: '#db2777' }
  }
  colors = color_styles[color] || color_styles['blue']
%>
<div style="background: white; border: 1px solid #e5e7eb; border-radius: 0.5rem; padding: 1rem;">
  <div style="display: flex; align-items: center; gap: 0.75rem;">
    <div style="flex-shrink: 0; width: 2.5rem; height: 2.5rem; border-radius: 0.5rem; display: flex; align-items: center; justify-content: center; background-color: <%= colors[:bg] %>; color: <%= colors[:text] %>;">
      <% case icon %>
      <% when 'users' %>
        <svg style="width: 1.25rem; height: 1.25rem;" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4.354a4 4 0 110 5.292M15 21H3v-1a6 6 0 0112 0v1zm0 0h6v-1a6 6 0 00-9-5.197M13 7a4 4 0 11-8 0 4 4 0 018 0z"></path>
        </svg>
      <% when 'building' %>
        <svg style="width: 1.25rem; height: 1.25rem;" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 21V5a2 2 0 00-2-2H7a2 2 0 00-2 2v16m14 0h2m-2 0h-5m-9 0H3m2 0h5M9 7h1m-1 4h1m4-4h1m-1 4h1m-5 10v-5a1 1 0 011-1h2a1 1 0 011 1v5m-4 0h4"></path>
        </svg>
      <% when 'server' %>
        <svg style="width: 1.25rem; height: 1.25rem;" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 12h14M5 12a2 2 0 01-2-2V6a2 2 0 012-2h14a2 2 0 012 2v4a2 2 0 01-2 2M5 12a2 2 0 00-2 2v4a2 2 0 002 2h14a2 2 0 002-2v-4a2 2 0 00-2-2m-2-4h.01M17 16h.01"></path>
        </svg>
      <% when 'folder' %>
        <svg style="width: 1.25rem; height: 1.25rem;" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 7v10a2 2 0 002 2h14a2 2 0 002-2V9a2 2 0 00-2-2h-6l-2-2H5a2 2 0 00-2 2z"></path>
        </svg>
      <% when 'cube' %>
        <svg style="width: 1.25rem; height: 1.25rem;" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M20 7l-8-4-8 4m16 0l-8 4m8-4v10l-8 4m0-10L4 7m8 4v10M4 7v10l8 4"></path>
        </svg>
      <% when 'puzzle' %>
        <svg style="width: 1.25rem; height: 1.25rem;" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 4a2 2 0 114 0v1a1 1 0 001 1h3a1 1 0 011 1v3a1 1 0 01-1 1h-1a2 2 0 100 4h1a1 1 0 011 1v3a1 1 0 01-1 1h-3a1 1 0 01-1-1v-1a2 2 0 10-4 0v1a1 1 0 01-1 1H7a1 1 0 01-1-1v-3a1 1 0 00-1-1H4a2 2 0 110-4h1a1 1 0 001-1V7a1 1 0 011-1h3a1 1 0 001-1V4z"></path>
        </svg>
      <% end %>
    </div>
    <div>
      <p style="font-size: 1.5rem; font-weight: 700; color: #111827; margin: 0;"><%= value %></p>
      <p style="font-size: 0.75rem; color: #6b7280; margin: 0;"><%= title %></p>
      <% if local_assigns[:subtitle] %>
        <p style="font-size: 0.75rem; color: #9ca3af; margin: 0;"><%= subtitle %></p>
      <% end %>
    </div>
  </div>
</div>
