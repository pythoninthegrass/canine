              <div class="flex items-center gap-2">
                <%= add_on.name %>
              </div>
            <% end %>
          </li>
        <% end %>
        <li>
          <%= link_to new_add_on_path, class: "hover:bg-base-content/15 #{'active' if current_page?(new_add_on_path)}" do %>
            <div class="flex items-center gap-2">
              <iconify-icon icon="lucide:plus" height="18"></iconify-icon>
              New Add On
            </div>
          <% end %>
        </li>
      </ul>
    </details>
  </li>
</div>
